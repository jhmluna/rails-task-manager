<div class="container">
  <h1>My tasks</h1>
  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>

  <hr>

  <p><i class="fas fa-plus" style="color:#0056b3"></i> <%= link_to 'Add a new task', new_task_path %></p>
</div>
