<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task), class: 'btn btn-light border' do %>
      <i class="fas fa-pencil-alt"></i> Edit this task
    <% end %>
  </div>
  <div class="card bg-light mb-3">
    <div class="card-body">
      <%= @task.details %>
    </div>
  </div>
  <p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i> This task is completed
  <% else %>
    <i class="far fa-square"></i> This task is not completed yet
  <% end %>
  </p>
  <p><i class="fas fa-undo-alt" style="color:#0056b3"></i> <%= link_to 'Back to List', tasks_path %></p>
</div>
